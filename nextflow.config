// Nextflow configuration file for GHFC WGS Alignment Pipeline

params {
    // Pipeline steps control
    steps = ['alignment']  
    skip_alignment = false
    skip_deepvariant = false
    
    // Input/Output paths
    data = ""
    scratch = ""
    
    // Reference genomes
    ref = ""
    ref_name = ""
    old_ref_38 = ""
    old_cram_38 = ""
    old_ref_37 = ""
    old_cram_37 = ""
    
    // File patterns
    fastq_pattern = ""
    cram4realignment_pattern = "*.cram"
    
    // Bedgraph parameters
    bin = 1000  // Bin size for bedgraph generation
    
    // Tool paths (can be overridden when using containers)
    bwa_mem2 = "bwa-mem2"
    samblaster = "samblaster"
    sambamba = "sambamba"
    samtools = "samtools"
    bazam = "/path/to/bazam.jar"
    
    // GLnexus configuration
    glnexus_config = "DeepVariant_unfiltered"
    
    // DeepVariant configuration
    // WARNING: Update DeepVariant process settings accordingly to the number of threads
    deepvariant_threads = 96  // Number of parallel tasks for DeepVariant make_examples
    
    // Container settings
    enable_conda = false
    singularity_pull_docker_container = false
    apptainer_cache = ""
    singularity_cache = ""
    
    // Resource defaults
    max_memory = '460.GB'
    max_cpus = 95
    max_time = '240.h'
}

workDir = params.work_dir ?: 'work'

// Process-specific configurations
process {
    // Default resources
    cpus = 1
    memory = '4.GB'
    time = '240.h'
    
    // Error handling
    errorStrategy = 'retry'
    maxRetries = 3

    container = 'fcliquet/bioinfo-swissknife:a3537842e9a0b42a83a6c51fcab6910ae7d1056c'
    
    // Process-specific settings
    withName: 'BWA_MEM2_ALIGN' {
        cpus = 95
        memory = '460.GB'
    }

    withName: 'BAZAM_BWA_MEM2_REALIGN' {
        cpus = 47
        memory = { 250.GB + 70.GB * task.attempt }  // Increase memory on retry
    }
    
    withName: 'MERGE_UNITS' {
        cpus = 1
        memory = { 10.GB * task.attempt }
        container = 'docker://biocontainers/samtools:1.19.2--h50ea8bc_1'
    }
    
    withName: 'INDEX_CRAM' {
        cpus = 1
        memory = { 5.GB * task.attempt }
        container = 'docker://biocontainers/samtools:1.19.2--h50ea8bc_1'
    }
    
    // DeepVariant process settings requires version > 1.8
    withName: 'MAKE_EXAMPLES' {
        cpus = 95
        memory = '460.GB'
        container = 'docker://google/deepvariant:1.10.0-beta'
    }
    
    // DeepVariant process settings requires version > 1.8
    withName: 'CALL_VARIANTS' {
        cpus = 95
        memory = '460.GB'
        container = 'docker://google/deepvariant:1.9.0'
    }

    // DeepVariant process settings requires version > 1.8
    withName: 'POSTPROCESS_VARIANTS' {
        cpus = 95
        memory = '460.GB'
        container = 'docker://google/deepvariant:1.9.0'
    }

    withName: 'GLNEXUS_FAMILY' {
        container = 'docker://cgrlab/glnexus:v1.4.1'
        cpus = { Math.min(4, params.max_cpus) }
        memory = { 50.GB * task.attempt }
    }
    
    withName: 'NORMALIZE' {
        cpus = 2
        memory = {2.GB * task.attempt}
        container = 'docker://staphb/bcftools:latest'
    }
    
    withName: 'FAMILIAL_PEDIGREE' {
        cpus = 1
        memory = {1.GB * task.attempt}
        container = 'docker://fcliquet/bioinfo-swissknife:latest'
    }
    
    withName: 'GNOMAD_FREQ_ANNOT' {
        cpus = 2
        memory = {2.GB * task.attempt}
        container = 'docker://staphb/bcftools:latest'
    }
    
    withName: 'GNOMAD_FREQ_FILTER' {
        cpus = 2
        memory = '2.GB'
        container = 'docker://staphb/bcftools:latest'
    }
    
    withName: 'COMMON_FILTERS' {
        cpus = 4
        memory = '8.GB'
        container = 'docker://staphb/bcftools:latest'
    }
    
    withName: 'VEP_ANNOTATION' {
        cpus = 18
        memory = {10.GB * task.attempt}
        container = 'docker://ensemblorg/ensembl-vep:release_115.0'
    }
    
    withName: 'BCFTOOLS_ANNOTATE' {
        cpus = 2
        memory = '2.GB'
        container = 'docker://staphb/bcftools:latest'
    }
    
    withName: 'DNM_EXTRACTION' {
        cpus = 1
        memory = {1.GB * task.attempt}
        container = 'docker://brentp/slivar:latest'
    }
    
    withName: 'SNVS_COHORT_MERGE' {
        cpus = 4
        memory = {150.GB * task.attempt}
        container = 'docker://staphb/bcftools:latest'
    }
    
    withName: 'MERGE_DNM' {
        cpus = 1
        memory = {4.GB * task.attempt}
        container = 'docker://ubuntu:22.04'
    }
    
    withName: 'DNM_REPORT' {
        cpus = 2
        memory = {8.GB * task.attempt}
    }
    
    withName: 'NPZ_CONVERT' {
        cpus = 1
        memory = {28.GB * task.attempt}
        container = 'docker://quay.io/biocontainers/wisecondorx:1.2.9--pyhdfd78af_0'
    }
    
    withName: 'PREDICT' {
        cpus = 1
        memory = {8.GB * task.attempt}
        container = 'docker://quay.io/biocontainers/wisecondorx:1.2.9--pyhdfd78af_0'
    }
    
    withName: 'MOSDEPTH' {
        cpus = 4
        memory = {5.GB * task.attempt}
        container = 'quay.io/biocontainers/mosdepth:0.3.11--h0ec343a_1'
    }
    
    withName: 'TABIX_INDEX' {
        cpus = 1
        memory = {1.GB * task.attempt}
        container = 'docker://staphb/htslib:latest'
    }
    
    withName: 'BCF2TSV' {
        cpus = 2
        memory = {2.GB * task.attempt}
        container = 'docker://staphb/bcftools:latest'
    }
    
    withName: 'PYWOMBAT' {
        cpus = 1
        memory = {16.GB + (task.attempt-1)*200.GB}
    }
    
    withName: 'VCF2BEDGRAPH_VAF' {
        cpus = 2
        memory = {4.GB * task.attempt}
        container = 'docker://fcliquet/vcf2bedgraph:latest'
    }
    
    // Migration processes
    withName: 'CONVERT_NORM_VCF_TO_BCF' {
        cpus = 2
        memory = { 8.GB * task.attempt }
        container = 'docker://staphb/bcftools:latest'
    }
    
    withName: 'CONVERT_COMMON_VCF_TO_BCF' {
        cpus = 2
        memory = { 8.GB * task.attempt }
        container = 'docker://staphb/bcftools:latest'
    }
    
    withName: 'CLEANUP_LEGACY_FILES' {
        cpus = 1
        memory = { 2.GB * task.attempt }
        container = 'docker://staphb/bcftools:latest'
    }
    
    // Extractor processes
    withName: 'REFACTOR' {
        cpus = 1
        memory = { 8.GB * task.attempt }
        container = 'docker://fcliquet/bioinfo-swissknife:e01ebb77fd37138a4b21a151a1409e711448df69'
    }
    
    withName: 'PROCESS_FAM_TSV' {
        cpus = 1
        memory = { 8.GB * task.attempt }
        container = 'docker://fcliquet/bioinfo-swissknife:e01ebb77fd37138a4b21a151a1409e711448df69'
    }
    
    withName: 'PROCESS_FAM_BCF' {
        cpus = 1
        memory = { 8.GB * task.attempt }
        container = 'docker://fcliquet/bioinfo-swissknife:e01ebb77fd37138a4b21a151a1409e711448df69'
    }
    
    withName: 'PROCESS_IND_GVCF' {
        cpus = 1
        memory = { 4.GB * task.attempt }
        container = 'docker://fcliquet/bioinfo-swissknife:e01ebb77fd37138a4b21a151a1409e711448df69'
    }
    
    withName: 'FAM_AGGREGATE' {
        cpus = 1
        memory = { 4.GB * task.attempt }
        container = 'docker://fcliquet/bioinfo-swissknife:e01ebb77fd37138a4b21a151a1409e711448df69'
    }
    
    withName: 'AGGREGATE' {
        cpus = 1
        memory = { 4.GB * task.attempt }
        container = 'docker://fcliquet/bioinfo-swissknife:e01ebb77fd37138a4b21a151a1409e711448df69'
    }
}

// Executor configurations
executor {
    name = 'slurm'
    queueSize = 2500
    submitRateLimit = '10 sec'
    pollInterval = '30 sec'
}

// Container configurations
apptainer {
    autoMounts = true
    cacheDir = params.apptainer_cache ?: '/path/to/apptainer/cache'
    runOptions = '--bind /pasteur'
}

singularity {
    autoMounts = true
    cacheDir = params.singularity_cache ?: '/path/to/singularity/cache'
    runOptions = '--bind /pasteur'
}

docker {
    docker.runOptions = '-u $(id -u):$(id -g)'
}

// Environment profiles
profiles {
    
    // Local execution (for testing)
    local {
        process.executor = 'local'
        process.cpus = 4
        process.memory = '8.GB'
    }

    //SLURM execution
    slurm {
        process.executor = 'slurm'
        process.clusterOptions = '-p ghfc --qos=ghfc --exclude=maestro-1096,maestro-1082,maestro-1098,maestro-1090'
    }

    // Apptainer
    apptainer {
        apptainer.enabled = true
        singularity.enabled = false
        docker.enabled = false
    }
    
    // Testing profile
    test {
        params {
            data = 'test_data/'
            scratch = 'test_scratch/'
            max_memory = '6.GB'
            max_cpus = 2
            max_time = '1.h'
        }
        
        process {
            cpus = { check_max( 1, 'cpus' ) }
            memory = { check_max( 2.GB * task.attempt, 'memory' ) }
            time = { check_max( 30.min * task.attempt, 'time' ) }
        }
    }
}

// Resource checking function
def check_max(obj, type) {
    if (type == 'memory') {
        try {
            if (obj.compareTo(params.max_memory as nextflow.util.MemoryUnit) == 1)
                return params.max_memory as nextflow.util.MemoryUnit
            else
                return obj
        } catch (all) {
            println "   ### ERROR ###   Max memory '${params.max_memory}' is not valid! Using default value: $obj"
            return obj
        }
    } else if (type == 'time') {
        try {
            if (obj.compareTo(params.max_time as nextflow.util.Duration) == 1)
                return params.max_time as nextflow.util.Duration
            else
                return obj
        } catch (all) {
            println "   ### ERROR ###   Max time '${params.max_time}' is not valid! Using default value: $obj"
            return obj
        }
    } else if (type == 'cpus') {
        try {
            return Math.min( obj, params.max_cpus as int )
        } catch (all) {
            println "   ### ERROR ###   Max cpus '${params.max_cpus}' is not valid! Using default value: $obj"
            return obj
        }
    }
}

// Manifest
manifest {
    name = 'ghfc-ngs'
    contributors = [
        [
            name: 'F. Cliquet',
            affiliation: 'Institut Pasteur',
            email: 'fcliquet@pasteur.fr',
            orcid: '0000-0002-9989-0685',
            github: 'https://github.com/fcliquet'
        ]
    ]
    homePage = 'https://github.com/bourgeron-lab/ghfc-ngs'
    docsUrl = 'https://github.com/bourgeron-lab/ghfc-ngs/blob/main/HOWTO.md'
    description = 'WGS pipeline for GHFC project'
    defaultBranch = 'main'
    mainScript = 'main.nf'
    nextflowVersion = '>=21.10.3'
    license = 'MIT'
    version = '1.0.0'
}

// Timeline and reports
timeline {
    enabled = true
    overwrite = true
    file = "reports/timeline_${new Date().format('yyyyMMdd-HHmmss')}.html"
}

report {
    enabled = true
    overwrite = true
    file = "reports/report_${new Date().format('yyyyMMdd-HHmmss')}.html"
}

trace {
    enabled = true
    overwrite = true
    file = "reports/trace_${new Date().format('yyyyMMdd-HHmmss')}.txt"
}

dag {
    enabled = true
    overwrite = true
    file = "reports/dag_${new Date().format('yyyyMMdd-HHmmss')}.svg"
}

nextflow {
    enable {
        configProcessNamesValidation = false
    }
}
